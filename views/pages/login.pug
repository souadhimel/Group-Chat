extends ./../layouts/header.pug 


block title 
    title=title 

block css
    link(rel="stylesheet", href="./css/login.css")


block jsScript
    script(src="./js/login.js" defer) 


block bodyContent
    .wrapper 
        .login_wrapper 
            h1 Login 
            form(action="/login", method="post") 
                
                label(for="username")
                    b Username 
                input#username(type="text", class="form-control", placeholder="Enter your name or email", name="username")
                p.error.username-error username is required
                
                label(for="pasword")
                    b Password 
                input#password(type="password", class="form-control", placeholder="Enter your password", name="username")
                p.error.password-error password is required
                
                input(type="submit",class="form-control", value="Login")

            p Are you new here? Don't have an account? Then 
                a(href="/register") Register here