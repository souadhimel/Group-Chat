extends ./../layouts/header.pug 


block title 
    title=title 

block css
    link(rel="stylesheet", href="./css/login.css")


block jsScript
    script(src="./js/login.js" defer) 


block bodyContent
    .wrapper 
        .login_wrapper 
            h1 Register 
            form(action="/register", method="post", enctype='multipart/form-data') 
                
                div.d-flex 
                    div.me-3 
                        label(for="username")
                        b  First name
                        input#firstname(type="text", class="form-control", placeholder="Enter your first name", name="firstname", required='')
                        p.error.firstname-error First name is required
                    div 
                        label(for="username")
                        b Last name 
                        input#lastname(type="text", class="form-control", placeholder="Enter your last name", name="lastname",required='')
                        p.error.lastname-error Last name is required
                

                label(for="username")
                    b Username 
                input#username(type="text", class="form-control", placeholder="Enter your user name ", name="username")
                //- if error.username 
                //-     p.error.username-error #{error.username.msg}
                
                label(for="email")
                    b Email 
                input#email(type="email", class="form-control", placeholder="Enter your  email", name="email")
                //- if error.email 
                //-     p.error.email-error #{error.email.msg}
                 
                
                label(for="pasword")
                    b Password 
                input#password(type="password", class="form-control", placeholder="Enter your password", name="password",required='')
                //- if error.password 
                //-     p.error.password-error #{error.password.msg}
                 
                
                
                label(for="confirmPasword")
                    b Confirm Password 
                input#confirmpassword(type="password", class="form-control", placeholder="Enter your password", name="password",required='')
                //- if error.confirmPasword 
                //-     p.error.confirmPasword-error #{error.confirmPasword.msg}
                
                
                
                
                label(for="profileavatar")
                    b Profile Avatar
                input#profileavatar(type="file",accept='.jpg,.png,.jpeg,.svg', class="form-control", name="profileavatar",required='')
                //- if error.profileavatar 
                //-     p.error.profileavatar-error #{error.profileavatar.msg}
                
                
                input(type="submit",class="form-control", value="Register")

            p  Already have an account? Then 
                a(href="/login", class="link") Login here